@model Biblioteka.Domain.Dto.NaslovDto

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiranje</h1>

<h4>Naslov</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Jezici:</label>
                @Html.DropDownListFor(model => model.Jezik.Id, new SelectList(ViewBag.Jezici, "Id", "Naziv"), "Selektuj jezik..", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Jezik.Id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Vrste:</label>
                @Html.DropDownListFor(model => model.Vrsta.Id, new SelectList(ViewBag.Vrste, "Id", "Naziv"), "Selektuj vrstu..", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Vrsta.Id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="CenaPoDanu" class="control-label">Cena po danu</label>
                <input asp-for="CenaPoDanu" class="form-control" />
                <span asp-validation-for="CenaPoDanu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
